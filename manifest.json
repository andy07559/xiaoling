{
  "manifest_version": 3,
  "name": "小灵导航",
  "version": "2.1",
  "description": "一键生成08.ink短网址和导航",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage",
    "cookies",
    "sidePanel"
  ],
  "host_permissions": [
    "http://08.ink/*",
    "https://08.ink/*",
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "打开小灵导航"
    },
    "_execute_side_panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "打开小灵导航侧边栏"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 